// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Modelos de la Aplicaci√≥n ---

model Usuario {
  id          String       @id @default(cuid())
  nombre      String
  email       String       @unique
  password    String
  creado_en   DateTime     @default(now())
  actualizado_en DateTime  @updatedAt

  tareas      Tarea[]
  categorias  Categoria[]
  etiquetas   Etiqueta[]

  @@map("usuarios")
}

model Categoria {
  id          String       @id @default(cuid())
  nombre      String
  creado_en   DateTime     @default(now())
  actualizado_en DateTime  @updatedAt

  usuario     Usuario      @relation(fields: [usuario_id], references: [id], onDelete: Cascade)
  usuario_id  String

  tareas      Tarea[]

  @@unique([nombre, usuario_id])
  @@map("categorias")
}


model Tarea {
  id          String    @id @default(uuid())
  title       String
  description String?
  completed   Boolean   @default(false)
  priority    Int       @default(0) // 0: Low, 1: Medium, 2: High
  dueDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  usuario_id  String
  categoria_id  String?
  usuario     Usuario   @relation(fields: [usuario_id], references: [id])
  categoria   Categoria? @relation(fields: [categoria_id], references: [id])
  etiquetas   TareaEtiqueta[]

  @@map("tareas")
}




model Etiqueta {
  id          String       @id @default(cuid())
  nombre      String
  creado_en   DateTime     @default(now())
  actualizado_en DateTime  @updatedAt

  usuario     Usuario      @relation(fields: [usuario_id], references: [id], onDelete: Cascade)
  usuario_id  String

  tareas      TareaEtiqueta[] // Changed to TareaEtiqueta[]

  @@unique([nombre, usuario_id])
  @@map("etiquetas")
}

model TareaEtiqueta {
  tarea_id  String
  etiqueta_id String
  tarea     Tarea    @relation(fields: [tarea_id], references: [id])
  etiqueta  Etiqueta @relation(fields: [etiqueta_id], references: [id])

  @@id([tarea_id, etiqueta_id])
  @@map("tarea_etiquetas")
}

enum Prioridad {
  BAJA
  MEDIA
  ALTA
}