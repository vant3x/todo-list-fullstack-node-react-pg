// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id             String      @id @default(cuid())
  nombre         String
  email          String      @unique
  password       String
  creado_en      DateTime    @default(now())
  actualizado_en DateTime    @updatedAt
  last_login     DateTime?

  tareas         Tarea[]
  categorias     Categoria[]
  etiquetas      Etiqueta[]

  @@map("usuarios")
}

model Categoria {
  id             String      @id @default(cuid())
  nombre         String
  creado_en      DateTime    @default(now())
  actualizado_en DateTime    @updatedAt

  usuario        Usuario     @relation(fields: [usuario_id], references: [id], onDelete: Cascade)
  usuario_id     String

  tareas         Tarea[]

  @@unique([nombre, usuario_id])
  @@map("categorias")
}

model Tarea {
  id             String      @id @default(uuid())
  titulo         String
  descripcion    String?
  fecha_vencimiento DateTime?
  prioridad       Prioridad    @default(MEDIA)
  completada      Boolean      @default(false)
  fecha_completado DateTime?
  creado_en      DateTime    @default(now())
  actualizado_en DateTime    @updatedAt
  usuario        Usuario     @relation(fields: [usuario_id], references: [id], onDelete: Cascade)
  usuario_id     String

  categoria      Categoria?  @relation(fields: [categoria_id], references: [id], onDelete: SetNull)
  categoria_id   String?

  // Relación muchos-a-muchos explícita con Etiqueta
  etiquetas      TareaEtiqueta[]

  @@map("tareas")
}

model Etiqueta {
  id             String      @id @default(cuid())
  nombre         String
  creado_en      DateTime    @default(now())
  actualizado_en DateTime    @updatedAt

  usuario        Usuario     @relation(fields: [usuario_id], references: [id], onDelete: Cascade)
  usuario_id     String

  // Relación muchos-a-muchos explícita con Tarea
  tareas         TareaEtiqueta[]

  @@unique([nombre, usuario_id])
  @@map("etiquetas")
}

model TareaEtiqueta {
  tarea       Tarea    @relation(fields: [tarea_id], references: [id], onDelete: Cascade)
  tarea_id    String
  etiqueta    Etiqueta @relation(fields: [etiqueta_id], references: [id], onDelete: Cascade)
  etiqueta_id String

  @@id([tarea_id, etiqueta_id])
  @@map("tarea_etiquetas")
}

enum Prioridad {
  BAJA
  MEDIA
  ALTA
}